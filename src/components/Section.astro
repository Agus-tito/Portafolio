---
interface Props {
    title: string;

}
const { title } = Astro.props;
---

<section class="overflow-hidden relative">
    <div
        class="px-8 py-24 mx-auto md:px-12 lg:px-36 max-w-7xl"
    >
        <h3 class="text-4xl text-violet-900 dark:text-violet-400 font-display font-semibold mb-7 transition duration-500">
            {title}
        </h3>

        <slot />
    </div>
</section>
